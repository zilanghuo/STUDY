<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="300" status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%-d{[yyyy-MM-dd] HH:mm:ss.SSS} laocaibao_pc-%X{traceId} [%t]-[%F:%L]-[%p] %m%n"/>
        </Console>
        <RollingRandomAccessFile name="RollingFile" fileName="${sys:log.path}/laocaibao.log"
                                 filePattern="${sys:log.path}/$${date:yyyy-MM}/laocaibao-%d{yyyy-MM-dd}-%i.log.gz"
                                 ignoreExceptions="false">
            <PatternLayout pattern="%-d{[yyyy-MM-dd] HH:mm:ss.SSS} laocaibao_pc-%X{traceId} [%t]-[%F:%L]-[%p] %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
        </RollingRandomAccessFile>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
</Configuration>