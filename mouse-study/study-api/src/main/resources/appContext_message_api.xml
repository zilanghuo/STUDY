<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="zdHessianProxyFactory" class="com.zdmoney.trace.hessian.client.common.TraceHessianProxyFactory">
        <property name="channel" value="message"/>
    </bean>


    <bean id="msgDeviceFacadeService" class="com.zdmoney.trace.hessian.client.common.TraceHessianProxyFactoryBean">
        <property name="serviceUrl" value="${message.remote.url}/msgDeviceFacadeService"/>
        <property name="serviceInterface" value="com.zdmoney.message.api.facade.IMsgDeviceFacadeService"/>
        <property name="proxyFactory" ref="zdHessianProxyFactory"/>
    </bean>

    <bean id="msgPushFacadeService" class="com.zdmoney.trace.hessian.client.common.TraceHessianProxyFactoryBean">
